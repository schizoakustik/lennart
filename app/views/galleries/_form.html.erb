
<%= form_for @gallery, :html => { :multipart => true } do |f| %>

<div class="row">
  <div class="large-4 columns panel radius">
    <%= f.text_field :name, :placeholder => 'gallery name' %>
    <%= f.text_field :description, :placeholder => 'description' %>
  </div>
</div>
<div class="row">
  <div class="large-4 columns panel radius">
    <%= f.label :pictures %>
    <%= file_field_tag "images[]", type: :file, multiple: true %>
  </div>
</div>
<div class="row">
  <div class="large-4 columns panel radius">
    <%= f.submit nil, :class => 'button small radius' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
  galleries_path, :class => 'button small radius' %>
  </div>
</div>

<% end %>
  