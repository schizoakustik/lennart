<div id="maximage">
  <% @pictures.each do |picture| %>
    <%= image_tag (picture.image) %>
  <% end %>
</div>

<%= render 'form' %>
<%= render 'thumb_menu' %>

<%= link_to 'Visa bildspel', gallery_path, :class => 'button tiny radius' %>
<script type="text/javascript" charset="utf-8">
  
  
$(function() {
    $('#maximage').maximage({
        backgroundSize: "contain",
        cycleOptions: {
            fx: 'fadeZoom',
            //sync: false,
            speed: 800,
            timeout: 5000,
            pause: 1
        },
        onFirstImageLoaded: function() {
            jQuery('#maximage').fadeIn('fast');
          }
      
    });
});
</script>
