<table>
  <thead>
    <tr>
      <th>Titel</th>
      <th>Beskrivning</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.name %></td>
        <td><%= gallery.description %></td>
       
        <td><%= link_to 'Visa', gallery %></td>
        <td><%= link_to 'Ändra', edit_gallery_path(gallery) %></td>
        <td><%= link_to 'Ta bort', gallery, method: :delete, data: { confirm: 'Är du säker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

